<Window x:Name="window" x:Class="codingfreaks.pping.Ui.WindowsApp.AddJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:codingfreaks.pping.Ui.WindowsApp"
        mc:Ignorable="d"        
        Title="{Binding Title}" Height="300" Width="549.303" DataContext="{Binding AddJob, Source={StaticResource Locator}}" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- left grid -->
        <StackPanel Grid.Column="0" Grid.Row="0">
            <Label Content="Address"></Label>
            <TextBox Text="{Binding Data.TargetAddess, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Label Content="Ports (serparte multiple ports by comma)"></Label>
            <TextBox Text="{Binding TargetPorts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>
        <!-- right grid -->
        <StackPanel Grid.Column="1" Grid.Row="0">

        </StackPanel>
        <!-- bottom row -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2"  Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Command="{Binding OkCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=window, Mode=OneWay}"></Button>
            <Button Content="Cancel" IsCancel="True"></Button>
        </StackPanel>
    </Grid>
</Window>

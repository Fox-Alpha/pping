<Application x:Class="codingfreaks.pping.Ui.WindowsApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             StartupUri="MainWindow.xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d"
             xmlns:vm="clr-namespace:codingfreaks.pping.Ui.WindowsApp.ViewModel"
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:WindowsApp="clr-namespace:codingfreaks.pping.Ui.WindowsApp">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True"/>
            <WindowsApp:MessageListener x:Key="Listener" x:Shared="True" />
            <Style TargetType="Button">
                <Setter Property="Padding" Value="6"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Width" Value="80"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>